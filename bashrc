PS1='\u@\h:\w\$ '

# Paths
export PATH=/opt/dam/bin:$PATH
export LD_LIBRARY_PATH=/opt/dam/lib:$LD_LIBRARY_PATH
export PYTHONPATH=/opt/dam/lib/python2.5/site-packages:$PYTHONPATH

# Common stuff
eval "`dircolors -b`"
alias ls='ls-gnu --color=auto'
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

# Print information
echo "DAM shell"
echo
echo "BINS:   $PATH"
echo "LIBS:   $LD_LIBRARY_PATH"
echo "PYTHON: $PYTHONPATH"
echo
